<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="thereal.chimera_beta" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".HomeActivity"
            android:label="@string/title_activity_home" >
        </activity>
        <activity
            android:name=".SuggestionsActivity"
            android:label="@string/title_activity_suggestions"
            android:parentActivityName=".HomeActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="thereal.chimera_beta.HomeActivity" />
        </activity>
        <activity
            android:name=".SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName=".HomeActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="thereal.chimera_beta.HomeActivity" />
        </activity>
        <activity
            android:name=".TitleViewActivity"
            android:label="@string/title_activity_title_view"
            android:parentActivityName=".HomeActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="thereal.chimera_beta.HomeActivity" />
        </activity>
        <activity
            android:name=".Accounts.CreateAccount"
            android:label="@string/title_activity_create_account" >
        </activity>
        <activity
            android:name=".Accounts.AccountSetup1"
            android:label="@string/title_activity_account_setup1" >
        </activity>
        <activity
            android:name=".Accounts.AccountSetup2"
            android:label="@string/title_activity_account_setup2" >
        </activity>
    </application>

</manifest>
