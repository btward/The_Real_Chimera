<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="thereal.chimera_beta.HomeActivity"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:background="@android:color/background_light">

    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="Books"
        android:id="@+id/bookButton"
        android:layout_marginTop="112dp"
        android:background="@mipmap/book_icon"
        android:clickable="true"
        android:transitionName="Book"
        android:contentDescription="Book"
        android:textColor="#00ffffff"
        android:layout_below="@+id/helloTxtView"
        android:layout_alignParentStart="true"
        android:layout_marginStart="34dp"
        android:layout_centerInParent="true"
        android:layout_gravity="center" />

    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="Games"
        android:id="@+id/gameButton"
        android:background="@mipmap/game_icon"
        android:layout_marginStart="56dp"
        android:layout_alignTop="@+id/bookButton"
        android:layout_toEndOf="@+id/bookButton"
        android:clickable="true"
        android:transitionName="Game"
        android:contentDescription="Game"
        android:textColor="#00ffffff"
        android:layout_alignBottom="@+id/bookButton"
        android:layout_centerInParent="true"
        android:layout_gravity="center" />

    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="TV"
        android:id="@+id/tvButton"
        android:background="@mipmap/tv_icon"
        android:layout_alignTop="@+id/movieButton"
        android:layout_alignStart="@+id/bookButton"
        android:clickable="true"
        android:transitionName="TV"
        android:contentDescription="TV"
        android:textColor="#00ffffff"
        android:layout_centerInParent="true"
        android:layout_gravity="center" />

    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="Movies"
        android:id="@+id/movieButton"
        android:background="@mipmap/movie_icon"
        android:layout_below="@+id/gameButton"
        android:layout_alignStart="@+id/gameButton"
        android:layout_marginTop="39dp"
        android:clickable="true"
        android:transitionName="Film"
        android:contentDescription="Movie"
        android:textColor="#00ffffff"
        android:layout_centerInParent="true"
        android:layout_gravity="center" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Settings"
        android:id="@+id/settingsButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:contentDescription="Settings" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/helloTxtView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:visibility="invisible" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="General"
        android:id="@+id/whateverButton"
        android:layout_below="@+id/tvButton"
        android:layout_centerHorizontal="true"
        android:contentDescription="any"
        android:layout_gravity="center" />

    <SearchView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/homeSearch"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:contentDescription="search"
        android:layout_toStartOf="@+id/settingsButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go"
        android:id="@+id/searchButton"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/homeSearch"
        android:contentDescription="search" />

</RelativeLayout>
